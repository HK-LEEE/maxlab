# MaxLab Frontend Environment Configuration
# Copy this file to .env and update the values for your environment

# OAuth 2.0 Settings
VITE_AUTH_SERVER_URL=http://localhost:8000
VITE_CLIENT_ID=maxlab
VITE_REDIRECT_URI=http://localhost:3010/oauth/callback

# Backend API URL (used by axios clients)
# Note: client.ts uses VITE_API_BASE_URL, so keeping both for compatibility
VITE_API_BASE_URL=http://localhost:8010
VITE_AUTH_API_URL=http://localhost:8010

# Development Server Settings
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=3010

# Environment
VITE_NODE_ENV=development

# Optional: Enable/disable features per environment
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_DEBUG_LOGS=true

# Production/Staging URLs (examples)
# VITE_AUTH_SERVER_URL=https://auth.maxlab.com
# VITE_API_BASE_URL=https://api.maxlab.com
# VITE_AUTH_API_URL=https://api.maxlab.com
# VITE_REDIRECT_URI=https://app.maxlab.com/oauth/callback
# MaxLab Frontend Staging Environment Template
# Copy this file to .env.staging and update the values for your staging environment

# OAuth 2.0 Settings (Staging)
VITE_AUTH_SERVER_URL=https://staging-auth.maxlab.com
VITE_CLIENT_ID=maxlab-staging
VITE_REDIRECT_URI=https://staging.maxlab.com/oauth/callback

# Backend API URL (Staging)
VITE_API_BASE_URL=https://staging-api.maxlab.com
VITE_AUTH_API_URL=https://staging-api.maxlab.com

# Development Server Settings
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=3010

# Environment
VITE_NODE_ENV=staging

# Feature flags for staging
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_DEBUG_LOGS=true

# Examples for different staging scenarios:
#
# Local staging environment:
# VITE_AUTH_SERVER_URL=http://staging-server:8000
# VITE_API_BASE_URL=http://staging-server:8010
# VITE_REDIRECT_URI=http://staging-server:3010/oauth/callback
#
# Docker staging environment:
# VITE_AUTH_SERVER_URL=http://maxlab-auth-staging:8000
# VITE_API_BASE_URL=http://maxlab-api-staging:8010
# VITE_REDIRECT_URI=http://maxlab-frontend-staging:3010/oauth/callback
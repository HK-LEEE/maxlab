# MaxLab Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/max_lab

# SSL/TLS Settings (optional for development)
# DB_SSL_MODE=disable
# DB_SSL_CERT_PATH=
# DB_SSL_KEY_PATH=
# DB_SSL_CA_PATH=

# Security Keys (auto-generated if not provided)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
CSRF_SECRET_KEY=your-csrf-secret-key-here
SESSION_SECRET_KEY=your-session-secret-key-here

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# External Authentication Server
AUTH_SERVER_URL=http://localhost:8000
AUTH_SERVER_TIMEOUT=10

# Legacy compatibility (same as AUTH_SERVER_URL)
MAXPLATFORM_API_URL=http://localhost:8000

# Server Configuration
HOST=0.0.0.0
PORT=8010

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3010,http://127.0.0.1:3010

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_FAIL_OPEN=true
RATE_LIMITING_HEADERS_ENABLED=true

# Session Configuration
SESSION_COOKIE_NAME=maxlab_session
SESSION_LIFETIME_SECONDS=3600
SESSION_REMEMBER_ME_LIFETIME_SECONDS=604800
SESSION_MAX_PER_USER=5
SESSION_RENEWAL_THRESHOLD_SECONDS=300
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CSRF Configuration
CSRF_TOKEN_LENGTH=32
CSRF_COOKIE_NAME=csrf_token
CSRF_HEADER_NAME=X-CSRF-Token
CSRF_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=false

# Cache TTL Settings
USER_MAPPING_CACHE_TTL=3600
GROUP_MAPPING_CACHE_TTL=3600
PERMISSION_CACHE_TTL=300

# UUID Mapping Settings
ENABLE_DETERMINISTIC_UUID_GENERATION=true
UUID_NAMESPACE_USERS=maxlab_users
UUID_NAMESPACE_GROUPS=maxlab_groups

# File Upload Settings
UPLOAD_PATH=uploads
MAX_UPLOAD_SIZE=104857600

# Static Files
STATIC_FILES_DIR=static
SERVE_STATIC_FILES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console

# Scheduler
AUTO_CLOSE_DAYS_DEFAULT=90

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_TOKEN=your-websocket-token-here

# MSSQL Configuration (optional - for data providers)
# MSSQL_CONNECTION_STRING=DRIVER={ODBC Driver 17 for SQL Server};SERVER=localhost;DATABASE=equipment_db;UID=username;PWD=password;

# MaxLab Admin Configuration
MAXLAB_ADMIN_EMAILS=admin@example.com,superuser@company.com
MAXLAB_ADMIN_UUIDS=
MAXLAB_TRUST_OAUTH_ADMIN=false
MAXLAB_ADMIN_CONFIG_FILE=admin_config.json

# Production Examples (uncomment and modify for production)
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql+asyncpg://username:password@prod-db-host:5432/max_lab
# AUTH_SERVER_URL=https://auth.maxlab.com
# BACKEND_CORS_ORIGINS=https://app.maxlab.com,https://maxlab.com
# REDIS_URL=redis://redis-host:6379/0
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true
# LOG_LEVEL=WARNING
# LOG_FORMAT=json

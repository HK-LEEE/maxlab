# 외부 인증 서버
AUTH_SERVER_URL=http://localhost:8000
AUTH_SERVER_TIMEOUT=10.0

# 서버 설정
HOST=0.0.0.0
PORT=8010

# CORS 설정 (개발 환경 기본값 사용)
# 추가 origin이 필요한 경우에만 설정
# CORS_ALLOW_ORIGINS=http://localhost:3001,http://localhost:3002

# 로깅 설정 (개발 환경 기본값 사용)
# LOG_LEVEL=DEBUG
# LOG_FORMAT=console

# WebSocket Configuration

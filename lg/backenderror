│ │ 우선순위 1: 마이그레이션 실행                                                                                    │ │
│ │ ALTER TABLE oauth_refresh_tokens ADD COLUMN IF NOT EXISTS session_id VARCHAR(255);                               │ │
│ │ ALTER TABLE oauth_access_tokens ADD COLUMN IF NOT EXISTS session_id VARCHAR(255);                                │ │
│ │ CREATE INDEX IF NOT EXISTS idx_oauth_refresh_tokens_session_scope ON oauth_refresh_tokens(user_id, client_id,    │ │
│ │ session_id, token_status);                                                                                       │ │
